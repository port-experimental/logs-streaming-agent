{
  "identifier": "vm",
  "title": "Virtual Machine",
  "icon": "Server",
  "schema": {
    "properties": {
      "cpu_cores": {
        "type": "number",
        "title": "CPU Cores",
        "description": "Number of CPU cores",
        "minimum": 1,
        "maximum": 64
      },
      "memory_size": {
        "type": "number",
        "title": "Memory Size (GB)",
        "description": "Amount of RAM in gigabytes",
        "minimum": 1,
        "maximum": 512
      },
      "storage_size": {
        "type": "number",
        "title": "Storage Size (GB)",
        "description": "Disk storage in gigabytes",
        "minimum": 10,
        "maximum": 10000
      },
      "region": {
        "type": "string",
        "title": "Region",
        "description": "Cloud region",
        "enum": [
          "us-east-1",
          "us-west-2",
          "eu-west-1",
          "ap-southeast-1"
        ]
      },
      "status": {
        "type": "string",
        "title": "Status",
        "enum": [
          "Running",
          "Stopped",
          "Terminated",
          "Pending"
        ],
        "enumColors": {
          "Running": "green",
          "Stopped": "yellow",
          "Terminated": "red",
          "Pending": "blue"
        }
      },
      "ip_address": {
        "type": "string",
        "title": "IP Address",
        "format": "ipv4"
      },
      "created_at": {
        "type": "string",
        "title": "Created At",
        "format": "date-time"
      }
    },
    "required": ["cpu_cores", "memory_size", "storage_size", "region", "status"]
  }
}
