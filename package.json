{
  "name": "ci-cd-integration-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "yarn workspace @cicd/shared build && yarn workspace @cicd/webhook-service build && yarn workspace @cicd/kafka-consumer-service build",
    "dev:webhook": "yarn workspace @cicd/webhook-service dev",
    "dev:kafka": "yarn workspace @cicd/kafka-consumer-service dev",
    "test": "yarn workspaces run test",
    "test:load": "artillery run load-tests/artillery.yml",
    "test:load:k6": "k6 run load-tests/k6-build-trigger.js",
    "lint": "yarn workspaces run lint",
    "clean": "yarn workspaces run clean && rm -rf node_modules",
    "typecheck": "yarn workspaces run typecheck"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "artillery": "^1.7.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
